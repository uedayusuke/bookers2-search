<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<% if @user_or_book == "1" %>
					<h2>Users</h2>
					<table class="table table-striped">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
								<tr>
									<td>
										<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: "jpeg", allback: "no_image.jpeg" %>
									</td>
									<td>
										<%= user.name %>
									</td>
									<td>
										<%= link_to "show", user_path(user.id) %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% else %>
					<h2>Books</h2>
					<table class="table table-striped">
						<thead>
							<tr>
								<th></th>
								<th>user_name</th>
								<th>title</th>
								<th>Opnion</th>
							</tr>
						</thead>
						<tbody>
							<% @books.each do |book| %>
							<tr>
								<td>
									<%= link_to user_path(book.user_id) do %>
										<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpeg" %>
									<% end %>
								</td>
								<td>
									<%= book.user.name %>
								</td>
								<td>
									<%= link_to book_path(book.id) do %>
										<%= book.title %>
									<% end %>
								</td>
								<td>
									<%= book.body %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				<% end %>
			</div>
		</div>
	</div>
</body>

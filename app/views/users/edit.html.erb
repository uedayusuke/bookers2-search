<body>
	<div class=container>


		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
			<label for="user_name">Name</label>
			<%= f.text_field :name, autofocus: true, id: "user_name" %><br>
			<label for="user_image">Image</label><br>
			<%= f.attachment_field :profile_image, id: "user_image" %><br>
			<label for="user_introduction">Introduction</label>
			<%= f.text_area :introduction, autofocus: true, id: "user_introduction" %><br>
			<%= f.submit "Update User" %>
		<% end %>
	</div>

	<footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
</body>